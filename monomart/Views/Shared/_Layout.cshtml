<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <meta name="description" content="go to the Mini-Mart" />
    <meta name="author" content="" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("/Content/favicon.png")" rel="shortcut icon" type="image/png" />
  	<link rel="stylesheet" href="//bootswatch.com/united/bootstrap.min.css" />
    @Styles.Render("~/css/site")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home" )">@ViewBag.Title</a>
            </div>


            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li class="dropdown @ViewBag.MenuCatalog">
                        <a href="@Url.Action("Index","Catalog")" class="dropdown-toggle" data-toggle="dropdown">Catalog <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Catalog" , new { id=1 })">Alvita</a></li>
                            <li><a href="@Url.Action("Index", "Catalog" , new { id=2 })">Traditional Medicinals</a></li>
                            <li><a href="@Url.Action("Index", "Catalog" , new { id=3 })">Yogi Tea</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "Catalog" , new { id="" })">All</a></li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("Index","Shopping")">Shopping Cart</a></li>
                    <li><a href="@Url.Action("Checkout","Shopping")">Checkout</a></li>
                </ul>

            </div><!--/.navbar-collapse -->
        </div>
    </div>
    @RenderBody()
    <div class="container">
        <hr />
        <footer>
            <p>&copy; 2014 Mini-Mart Inc.</p>
        </footer>
    </div> <!-- /container -->
	<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js" ></script>
	<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.1.1/js/bootstrap.min.js" ></script>
    @RenderSection("scripts", required: false)

	</body>
</html>	