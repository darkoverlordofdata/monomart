<div class="container">
    <div class="page-header">
        <h2>Shopping Cart</h2>
    </div>
    <div class="col-sm-12">
        <div id="message"></div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div id="cartTable"></div>
            <div class="row">
                <div class="pull-left">
                    <button class="btn btn-large btn-primary delete-all">Remove All</button>
                </div>
                <div class="pull-right">
                    <a class="btn btn-large btn-primary" href="@Url.Action("Checkout","Shopping")">Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/js/liquid")
    @Scripts.Render("~/js/shopping/index")
}
